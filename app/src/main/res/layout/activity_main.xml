<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/layoutMain">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#99310871"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:navigationIcon="@drawable/ic_baseline_menu_24"
            app:layout_constraintHorizontal_bias="1.0"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciclerViewNotas"
            android:layout_width="match_parent"
            android:layout_height="674dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="34dp" app:srcCompat="@drawable/new_note" android:id="@+id/newNote"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="@+id/toolbar" app:layout_constraintEnd_toEndOf="@+id/toolbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
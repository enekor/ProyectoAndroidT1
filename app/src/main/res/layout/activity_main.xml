<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/layoutMain">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciclerViewNotas"
            android:layout_width="403dp"
            android:layout_height="773dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/modoOscuro"
    />
    <Switch
            android:text="Modo oscuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/modoOscuro"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:checked="true" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
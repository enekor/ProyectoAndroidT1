<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/layoutMenu">

    <ImageView
            android:layout_width="46dp"
            android:layout_height="48dp" app:srcCompat="@drawable/oscuro" android:id="@+id/modoOscuroIcon"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="80dp" android:layout_marginTop="30dp"/>
    <ImageView
            android:layout_width="47dp"
            android:layout_height="41dp" app:srcCompat="@drawable/about_us" android:id="@+id/aboutUsIcon"
            app:layout_constraintTop_toBottomOf="@+id/modoOscuroIcon" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" android:layout_marginTop="15dp"/>
    <ImageView
            android:layout_width="47dp"
            android:layout_height="46dp" app:srcCompat="@drawable/how_to_use" android:id="@+id/howUseIcon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" app:layout_constraintTop_toBottomOf="@+id/aboutUsIcon"
            android:layout_marginTop="15dp"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/modoOscuroText"
            app:layout_constraintStart_toEndOf="@+id/modoOscuroIcon" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" android:layout_marginStart="10dp"/>
    <TextView
            android:text="@string/about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/aboutUsText"
            app:layout_constraintStart_toEndOf="@+id/aboutUsIcon"
            app:layout_constraintTop_toBottomOf="@+id/modoOscuroText" android:layout_marginTop="45dp"
            android:layout_marginStart="10dp"/>
    <TextView
            android:text="@string/como_usar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/howUseText"
            app:layout_constraintStart_toEndOf="@+id/howUseIcon" app:layout_constraintTop_toBottomOf="@+id/aboutUsText"
            android:layout_marginTop="40dp" android:layout_marginStart="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>